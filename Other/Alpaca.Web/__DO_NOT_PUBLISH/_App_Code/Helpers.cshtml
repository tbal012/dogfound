@functions{
    public static bool isValidIP(string ip)
    {
        IPAddress ot;
        bool valid = false;
        if (string.IsNullOrEmpty(ip)){
            valid = false;
        }
        else{
            valid = IPAddress.TryParse(ip, out ot);
        }
        return valid;
    }
}

