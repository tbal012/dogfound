@{
    Page.Title = "Dog Found";
    Layout = "~/_SiteLayout2.cshtml";
}

<div id="lostCard" class="content-grid mdl-grid">
    <div class="mdl-card mdl-shadow--6dp">
        <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
            <h2 class="mdl-card__title-text">Lost Dog Details</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <form id="dogLost" method="post" action="#">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input mdl-js-textfield" type="text" id="yourname" name="yourname" />
                    <label class="mdl-textfield__label" for="yourname">Your name</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input mdl-js-textfield" type="text" id="email" name="email" />
                    <label class="mdl-textfield__label" for="email">Email Address</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input mdl-js-textfield" type="text" id="phone" name="phone" />
                    <label class="mdl-textfield__label" for="phone">Phone Number</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input mdl-js-textfield" type="text" id="dogname" name="dogname" />
                    <label class="mdl-textfield__label" for="dogname">Dogs name</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <textarea class="mdl-textfield__input" type="text" rows="1" id="where"></textarea>
                    <label class="mdl-textfield__label" for="where">Where did you lose this dog</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <textarea class="mdl-textfield__input" type="text" rows="1" maxrows="10"
                              id="notes"></textarea>
                    <label class="mdl-textfield__label" for="notes">Notes</label>
                </div>
                <div>
                    <div class="file_input_div">
                        <div class="file_input">
                            <label class="image_input_button mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored">
                                <i class="material-icons">file_upload</i>
                                <input id="file_input_file" class="none" type="file" />
                            </label>
                        </div>
                        <div id="file_input_text_div" class="mdl-textfield mdl-js-textfield textfield-demo">
                            <input class="file_input_text mdl-textfield__input" type="text" disabled readonly id="file_input_text" />
                            <label class="mdl-textfield__label" for="file_input_text"></label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <button id="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Submit</button>
        </div>


    </div>

</div>

<div id="lostCardThanks" class="content-grid mdl-grid" style="display:none;">
    <div class="mdl-card mdl-shadow--6dp">
        <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
            <h2 class="mdl-card__title-text">Lost Dog Details</h2>
        </div>
        <div class="mdl-card__supporting-text">
            Thank you. The details of your lost dog have been received. Local dog handlers have been notified.
            
        </div>
    </div>
</div>

            <script>
                $(document).ready(function () {

                    $("#submit").on('click', function () {
                        $('#lostCard').hide();
                        $('#lostCardThanks').show();
                    });

                });

            </script>
